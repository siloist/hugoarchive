\par }\pard\plain \s20\qc \li0\ri0\widctlpar\faauto\adjustright\rin0\lin0\itap0\pararsid14903964 \f8\fs16\lang1033\langfe1040\cgrid\langnp1033\langfenp1040 {\f1\fs22\lang1040\langfe1040\langnp1040\insrsid14903964 
